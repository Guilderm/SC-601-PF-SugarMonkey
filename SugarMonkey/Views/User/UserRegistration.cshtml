@model SugarMonkey.Models.View.UserRegistrationView
@{
    ViewBag.Title = "UserRegistrationView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserRegistrationView</h2>


<div>
    @using (Html.BeginForm("UserRegistration", "User"))
    {
        <div style="color: red;">@Html.ValidationSummary()</div>
        <div class="row">
            <div class="col-lg-12">@ViewBag.Message</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.FirstName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.FirstName, new {@class = "form-control"})</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.FirstLastName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.FirstLastName, new {@class = "form-control"})</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.SecondLastName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.SecondLastName, new {@class = "form-control"})</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.Cellphone)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.Cellphone, new {@class = "form-control"})</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.Email, new {@class = "form-control"})</div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(userRegistration => userRegistration.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(userRegistration => userRegistration.Password, new {@class = "form-control", type = "Password"})</div>
        </div>
        <br/>
        <input type="submit" value="Registrarme" class="btn btn-primary"/>
    }

</div>