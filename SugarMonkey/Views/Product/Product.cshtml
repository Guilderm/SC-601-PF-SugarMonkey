@model IEnumerable<SugarMonkey.Models.Product>

@{
	ViewBag.Title = "Product";
}

<br />
<br />

<h2>Productos</h2>


	<br />
	<br />

	<div class="row col-lg-12">

		<div class="col-lg-3 form-group">
			<div class="col-md-12">
				Categoria
				@Html.Partial("ProductPartial", new SugarMonkey.Models.Product())
			</div>
		</div>

		@foreach (var item in Model)
		{
			<div class="col-lg-3 form-group">
				<div class="col-md-12">
					@item.Name
					<img src="@item.ImagePath" />
					@item.UnitPrice
					@item.Description
					<input type="submit" value="Añadir a carrito" class="btn btn-info btn-block" />
				</div>
			</div>
		}

	</div>
