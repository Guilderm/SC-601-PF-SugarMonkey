@model SugarMonkey.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<html>
<head>
    <title>Online Shopping</title>
    <link href="/CSS/admin_stylesheet.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<style>
    .AdminLogin {
        background: rgb(236, 233, 233);
        margin: 7% 30%;
        padding: 6% 10%;
    }

    .dashinp { margin-bottom: 10px; }

    .SignIn {
        background-color: rgb(30, 95, 209);
        color: #FFF;
        margin: 10% 0 10% 30%;
        padding: 5PX 30PX;
        text-align: center;
    }

    .forgot {
        font-size: 14px;
        margin-top: 8%;
    }
</style>
<div class="AdminLogin">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        <h1 style="margin-bottom: 20px; text-align: center;">Enter email-address</h1>
        <div class="container">
            @Html.TextBoxFor(m => m.EmailId, new {@class = "dashinp", placeholder = "Email Address", onkeypress = "return OnlyLegalCharacters();"})
            @Html.ValidationMessageFor(m => m.EmailId)


            @Html.TextBoxFor(m => m.NewPassword, new {@class = "dashinp", type = "Password", placeholder = "New Password", onkeypress = "return OnlyLegalCharacters();"})
            @Html.ValidationMessageFor(m => m.NewPassword)


            @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "dashinp", type = "Password", placeholder = "Confirm Password", onkeypress = "return OnlyLegalCharacters();"})
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            <input type="submit" value="Submit" onclick="return CheckAndSumbitValidForm(this)" class="SignIn"/>
        </div>
    }
</div>
<script type="text/javascript" src="/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>
<!--End contactus-->

<script>
    $(document).ready(function() {
        debugger;
        if ('@ViewBag.SendEmailMessage' != '') {
            swal('Reset password link is sent at your registered email-address', '', 'success');
        }
    })
</script>